<h2>sign up</h2>

<%= form_tag("/sign_up", method: "post") do %>
  <input type="text" name="username" placeholder="username" class="sign-up-submit"/>
  <input type="password" name="password" placeholder="password" class="sign-up-password1" />
  <input type="password" name="password_confirmation" placeholder="password again" class="sign-up-password2" />
  <input type="submit" value="sign up" class="sign-up"/>
<% end %>

<h4><%= link_to "sign in", "/sign_in" %></h4>
