<div class="form-container">

  <h2>sign in</h2>

  <%= form_tag("/sign_in", method: "post") do %>

    <div class="form-group">
      <input type="text" id="username" placeholder="username" name="username" class="form-control" />
    </div>

    <div class="form-group">
      <input type="password" id="password" placeholder="password" name="password" class="form-control" />
    </div>

    <div class="form-group">
      <input class="btn btn-primary sign-button-1" type="submit" value="Login" />
    </div>

  <% end %>

  <h4><%= link_to "Go to sign up", "/sign_up" %></h4>

</div>
